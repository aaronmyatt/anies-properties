    var navItems = [
        {
            label: 'Buy a house',
            href: '/listings'
        },
        {
            label: 'Sell',
            href: '/sellers'
        },
        {
            label: 'About',
            href: '/about'
        },
        {
            label: 'Contact',
            href: '/contact'
        }]

nav.hidden.justify-between.h-16.items-center(class="my-2 md:px-6 md:flex")
    div
        a(href="/") LOGO
    div.flex.h-full.my-2
        each link in navItems
            a.inline-flex.items-center.px-2.text-center(
                href=link.href
                class="xl:px-4 hover:bg-gray-300 hover:text-white hover:shadow hover:rounded"
            ) 
                span.uppercase.tracking-widest.font-semibold(class="text-sm xl:text-base") #{link.label}