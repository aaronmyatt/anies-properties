extends _includes/default.pug

block title
  | #{home.content.seo.title}

block content
  #hero.flex.items-center.justify-center.bg-purple-300(class="h-[50vh]")
    h1 Anies Properties

  #quote.h-64.flex.items-center.justify-center.bg-gray-500.text-white 
    h2 I help people buy, sell and rent their dream properties.

  - 
    var components = { 
      TEXT: 'JustText', 
      HEADER_AND_TEXT: 'TextWithHeader', 
      IMAGE: 'Image' 
    }
  #content.container.mx-auto
    .flex.flex-wrap.mx-8

      each section in home.content.body
        each content in section.content
          div(class="w-1/2")
          
            case content.component
              when components.TEXT
                p= content.content
              when components.HEADER_AND_TEXT
                div
                  h3= content.heading
                  p= content.content
              when components.IMAGE
                img(src=content.adv.image width=800 height=500)

  #social

  #gallery

block alpine-data
  | window.rawData = !{JSON.stringify(home)}
